<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="@dimen/activity_vertical_margin" >

        
    <!-- notification type -->   
    
             
        
         
        <!-- Radio buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="10dp"
            android:text="Type" />
        
          <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_divider_thickness"
            android:background="#eeeeee"/>
        
         <LinearLayout
        android:id="@+id/typeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        
      
    android:background="#dddddd"
        android:orientation="vertical" >
        
        
       
        
        <RadioGroup
             android:id="@+id/reminderTypeRadioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/LecturesradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                 />

            <RadioButton
                android:id="@+id/HomeWorkradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            <RadioButton
                android:id="@+id/ExamsradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            
            <RadioButton
                android:id="@+id/HolidayradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <RadioButton
                android:id="@+id/TodoradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
       </RadioGroup>
        
        
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
             android:layout_marginBottom="10dp"
            android:text="Time ( 0 -24 Hour)" />
         <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_divider_thickness"
            android:background="#eeeeee"/>
         
         
         
               <!-- Time  -->
          
          <LinearLayout
        android:id="@+id/timeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
        
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        
      
    android:background="#dddddd"
        android:orientation="horizontal" >
        
             
       
            <SeekBar
            android:id="@+id/StartTime"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_weight="0.6"
              android:max="24" />
         
    <TextView
        android:id="@+id/StartTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:alpha="0.7"
        android:hint="Start time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorAccent"
        android:textColorHint="#333333"
        android:textStyle="bold" />
    
          
      
    
 
    </LinearLayout>
    
          
          
          <LinearLayout
        android:id="@+id/EndtimeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
        
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        
      
    android:background="#dddddd"
        android:orientation="horizontal" >
    
                <SeekBar
            android:id="@+id/EndTime"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_weight="0.6"
              android:max="24" />
         
    <TextView
        android:id="@+id/EndTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:alpha="0.7"
        android:hint="End Time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/accent_material_light"
        android:textColorHint="#333333"
        android:textStyle="bold" />
    </LinearLayout>
           <!-- Time ends  -->
           
           
           <!-- DATE START -->
           
           <!-- Start Date -->
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
    android:background="#dddddd"
        android:orientation="vertical">"
    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:alpha="0.7"
        android:hint="Start Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333"
        android:textColorHint="#333333"
        android:textStyle="bold" />
                
    <!-- Start Date -->
    
    
      <Button
             android:id="@+id/sDate_button"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="0.5"
             android:background="#dddddd"
             android:textColor="@color/colorAccent"
             android:gravity="center"
             android:text="Select calendar"
             android:textAllCaps="true"
             android:textStyle="bold" />
           
           </LinearLayout>
           
           
           <!-- End Date -->
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
    android:background="#dddddd"
        android:orientation="vertical" >
    
                <TextView
        android:id="@+id/endDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:alpha="0.7"
        android:hint="End Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333333"
        android:textColorHint="#333333"
        android:textStyle="bold" />
               
               
               
                
      <Button
             android:id="@+id/endDate_button"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="0.5"
             android:background="#dddddd"
             android:textColor="@color/accent_material_light"
             android:gravity="center"
             android:text="Select calendar"
             android:textAllCaps="true"
             android:textStyle="bold" />
    
    </LinearLayout>
           
           
           
         
           <!-- DATE ENDS -->
           
           <!-- Course Name -->
           
            <LinearLayout
        android:id="@+id/EventLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
        
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="#dddddd"
        android:orientation="horizontal" >
    
                
             <EditText
            android:id="@+id/event_entry"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:hint="Event details"
            android:paddingLeft="10dp" />
           </LinearLayout>
           
              <!-- Reminder -->
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
         android:layout_marginBottom="10dp"
        android:gravity="left"
        android:layout_gravity="bottom"
    android:background="#dddddd"
        android:orientation="horizontal" >
           <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder" />
           
           
           </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
         android:background="#ffffff"
        android:orientation="horizontal" >
      
         <Button
             android:id="@+id/cancel_button"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="0.5"
             android:background="#ee9999"
             android:textColor="#ffffff"
             android:gravity="center"
             android:text="Cancel"
             android:textAllCaps="true"
             android:textStyle="bold" />
         <Button
             android:id="@+id/submit_button"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="0.5"
             android:background="#dddddd"
             android:textColor="#666333"
             android:gravity="center"
             android:text="Save"
             android:textAllCaps="true"
             android:textStyle="bold" />
    
    </LinearLayout>
    </LinearLayout>

</ScrollView>
